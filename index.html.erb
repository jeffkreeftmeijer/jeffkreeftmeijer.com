<h4>Newest:</h4>

<ul class="articles">
  <% @articles.sort_by { |a| a.metadata['date'] }.reverse[0..2].each do |article| %>
    <%= render :article, {:article => article} %>
<% end %>
</ul>

<h4>Most popular:</h4>
<ul class="articles">
  <% @articles.select { |a| a.metadata['popular'] }.sort_by { |a| a.metadata['date'] }.reverse.each do |article| %>
    <%= render :article, {:article => article} %>
<% end %>
</ul>
